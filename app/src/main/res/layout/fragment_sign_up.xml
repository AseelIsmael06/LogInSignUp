<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6DFFEAEA"
    android:foregroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="298dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/brush4"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="464dp" />

    <EditText
        android:id="@+id/etMailSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etPassSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password.."
        android:inputType="numberPassword"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="95dp" />

    <EditText
        android:id="@+id/etPassConfirmSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password..."
        android:inputType="textPassword"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="172dp" />

    <Button
        android:id="@+id/etEmailLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A68A8A"
        android:text="Sign Up"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="292dp" />

    <TextView
        android:id="@+id/signUpToLogInTxt"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:text="Have an account?"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="375dp" />
</androidx.constraintlayout.widget.ConstraintLayout>